# =====================================================
# CONFIGURAÇÕES DO BANCO DE DADOS - SUPABASE
# =====================================================
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# =====================================================
# CONFIGURAÇÕES DA OPENAI
# =====================================================
OPENAI_API_KEY=your_openai_api_key

# =====================================================
# CONFIGURAÇÕES DO JOGO
# =====================================================
# Máximo de tentativas por dia
GAME_MAX_ATTEMPTS=3

# Máximo de dicas por dia
GAME_MAX_HINTS=3

# Máximo de perguntas por dia
GAME_MAX_QUESTIONS=10

# Sistema de pontuação
POINTS_PER_ATTEMPT=100
POINTS_PER_HINT=25

# =====================================================
# CONFIGURAÇÕES DE DESENVOLVIMENTO
# =====================================================
NODE_ENV=development

# =====================================================
# CONFIGURAÇÕES DE CRON JOB
# =====================================================
# Fuso horário para o cron job (padrão: América/São_Paulo)
TIMEZONE=America/Sao_Paulo

# =====================================================
# CONFIGURAÇÕES DE SEGURANÇA
# =====================================================
# Chave secreta para JWT (se implementar autenticação)
JWT_SECRET=your_jwt_secret_key

# =====================================================
# CONFIGURAÇÕES DE LOGS
# =====================================================
LOG_LEVEL=info 